[include]
    path = ~/dotfiles/git/.gitconfig.local

[alias]
    gr = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
    s = status
    ci = commit
    cm = commit -m
    br = branch
    co = checkout
    f = fetch
    p = pull

[ghq]
    root = ~/Documents/src
